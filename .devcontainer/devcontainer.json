{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:1": {}
  },
  "postCreateCommand": "pip install platformio && pio upgrade",
  "settings": {
    "python.pythonPath": "/usr/local/bin/python3",
    "c_cpp_properties": {
      "includePath": [
        "/home/codespace/.platformio/packages/framework-arduinoespressif32/libraries",
        "/home/codespace/.platformio/packages/framework-arduinoespressif32/cores/esp32"
      ],
      "defines": [],
      "compilerPath": "/usr/bin/cpp",
      "cStandard": "c17",
      "cppStandard": "c++14",
      "intelliSenseMode": "linux-clang-x64"
    }
  },
  "remoteUser": "codespace",
  "runArgs": [
    "--init"
  ]
}
